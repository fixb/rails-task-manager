<h1>My Tasks</h1>


<% @tasks.each do |task| %>
  <% if task.completed %>
      <%= link_to task_path(task.id) do  %>
        <i class="fa fa-check-square-o" aria-hidden="true"></i>
        <%= task.title %>
        <%= link_to task_path(task.id),method: :delete do %>
        <i class="fas fa-trash-alt"></i><br>
        <% end %>
      <% end %>

  <% else %>
      <%= link_to task_path(task.id) do  %>
        <i class="fa fa-square-o" aria-hidden="true"></i>
        <%= task.title %>
        <%= link_to task_path(task.id),method: :delete do %>
        <i class="fas fa-trash-alt"></i><br>
        <% end %>
      <% end %>

  <% end %>
<% end %>
<br>
<%= link_to "+ Add a new task", tasks_new_path %>
